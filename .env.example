# Vercel Postgres (Neon) Database connection string
POSTGRES_URL=postgresql://your-neon-database-url

# Used to encrypt JWT tokens
PAYLOAD_SECRET=YOUR_SECRET_HERE

# Used to configure CORS, format links and more. No trailing slash
NEXT_PUBLIC_SERVER_URL=https://your-domain.vercel.app

# Secret used to authenticate cron jobs
CRON_SECRET=YOUR_CRON_SECRET_HERE

# Used to validate preview requests
PREVIEW_SECRET=YOUR_SECRET_HERE

# Vercel Blob Storage for media files
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_your_token_here

# Email configuration for contact forms (using Resend)
FROM_EMAIL=noreply@pelive.be
RESEND_API_KEY=your_resend_api_key_here

# Legacy SMTP configuration (optional, not used with Resend)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false
